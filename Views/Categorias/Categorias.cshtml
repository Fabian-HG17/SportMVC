@model List<SportMVC.Models.ViewModels.Categorias.CategoriasLista>

<!-- Masthead-->
<div class="categorias portada">
    <h2 class="card-title">@ViewData["Title"]</h2>
</div>

<div class="container espacio">


    <div class="row">
        <div class="col-md-12 mb-3" style="text-align:right;">
            <a href="~/Categorias/AgregarCategoria" class="btn btn-primary">
                    Agregar
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-responsive">
                <tr>
                    <th># De Categoria</th>
                    <th>Categoría</th>
                    <th>Subcategoría</th>
                    <th>Funciones</th>

                    @foreach (var Elemento in Model)
                    {
                        <tr>
                            <td>@Elemento.id_Categoria</td>
                            <td>@Elemento.nombre_Categoria</td>
                            <td>@Elemento.subcategoria</td>

                            <td>
                                <a class="btn btn-warning" href="~/Categorias/EditarCategoria/@Elemento.id_Categoria">
                                    <i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>
                                </a>
                                <a class="btn btn-danger" href="~/Categorias/EliminarCategoria/@Elemento.id_Categoria">
                                    <i class="fa-solid fa-trash-can" style="color: #ffffff;"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>

