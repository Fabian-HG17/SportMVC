@model List<SportMVC.Models.ViewModels.Maquinas.MaquinasLista>

<!-- Masthead-->
<div class="maquinas portada">
    <h2 class="card-title">@ViewData["Title"]</h2>
</div>

<div class="container espacio">


    <div class="row">
        <div class="col-md-12 mb-3" style="text-align:right;">
            <a href="~/Maquinas/AgregarMaquina" class="btn btn-primary">
                Agregar
            </a>
        </div>
    </div>
        <div class="row col-md-12">

            @foreach (var Elemento in Model)
            {
               <div class="col-md-4">
                   <div class="card" style="width: 18rem;">
                       <img src="@Elemento.url_foto" class="card-img-top" alt="...">
                       <div class="card-body">
                           <h5 class="card-title">@Elemento.modelo</h5>
                           <p class="card-text"><i class="fa-solid fa-dollar-sign" style="color: #b3bac6;"></i>@Elemento.precio</p>
                           <p class="card-text"><i class="fa-solid fa-tag" style="color: #b3bac6;"></i> @Elemento.categoria</p>
                           <a href="~/Maquinas/EditarMaquina/@Elemento.id_Maquina" class="btn btn-primary">Editar</a>
                           <a href="~/Maquinas/EliminarMaquina/@Elemento.id_Maquina" class="btn btn-danger">Eliminar</a>
                       </div>
                   </div>
               </div>
            }
        </div>
</div>

